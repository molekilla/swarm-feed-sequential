{
  "include": ["src"],
  "compilerOptions": {
    "alwaysStrict": true,
    "target": "ES2020",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "module": "ES2020",
    "strict": false,
    "resolveJsonModule": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "rootDirs": ["src"],
    "outDir": "dist",
    "skipLibCheck": true,
    "noImplicitAny": false,
    "types": ["node", "jest"],
  },

  "exclude": ["../node_modules"]
}
